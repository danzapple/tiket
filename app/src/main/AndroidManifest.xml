<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tourtle.ticketing">

    <application
        android:name=".Tourtle"
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RiwayatTiket" />
        <activity
            android:name=".Login"
            android:label="@string/login" />
        <activity android:name=".ReviewTiket" />
        <activity android:name=".DetailTiket" />
        <activity android:name=".Rekap" />
        <activity android:name=".BluetoothCoba" />
        <activity android:name=".Laporan"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>