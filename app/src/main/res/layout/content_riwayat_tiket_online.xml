<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@drawable/border_radius_white">

    <TextView
        android:id="@+id/tvIdTiket"
        android:layout_width="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textSize="12sp"
        android:fontFamily="sans-serif-light"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/tvBiayaTiket"/>

    <TextView
        android:id="@+id/tvBiayaTiket"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_below="@+id/tvIdTiket"
        android:background="@color/light_gray"
        android:padding="16dp"
        android:textSize="14sp"
        android:drawablePadding="8dp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-light"
        android:id="@+id/tvNamaWisata"
        android:drawableStart="@drawable/ic_ticket_online"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@id/tvNamaWisata"
        android:layout_width="match_parent"
        android:id="@+id/tvStatus"
        android:textSize="12sp"
        android:padding="16dp"
        android:fontFamily="sans-serif-light"
        android:layout_height="wrap_content"/>

</RelativeLayout>